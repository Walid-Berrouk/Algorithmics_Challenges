ALGORITHM Somme
VAR
    a : INTEGER := 16
    b : INTEGER := 15
    c : INTEGER := 301
    sum : INTEGER 
BEGIN
    // Solution One
    sum := a + b;
    sum := sum + c;

    // Solution two
    sum := a + b;
    sum +:= c;

    // Solution three
    sum := a + b + c;


    Write("La Somme des trois nombre est : ", sum);
    
END